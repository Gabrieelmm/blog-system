{{#each erros}}
    <div class="alert alert-danger">{{msg}}</div>
{{else}}

{{/each}}

<h1>Registro</h1>
<hr>
<div class="card">
    <div class="card-body">
        <form action="" method="POST" >
            <label for="nome" class="mt-2">Nome: </label>
            <input type="text" name="nome" required class="form-control" placeholder="Seu nome">

            <label for="email" class="mt-2">Email: </label>
            <input type="email" name="email" required class="form-control" placeholder="Seu email">

            <label for="senha1" class="mt-2">Senha: </label>
            <input type="password" name="senha1" required class="form-control" placeholder="Sua senha">

            <label for="senha2" class="mt-2">Repita a sua senha: </label>
            <input type="password" name="senha2" required class="form-control" placeholder="Repita sua senha">

            <button type="submit" class="btn btn-success mt-2">Criar conta</button>
        </form>
    </div>
</div>