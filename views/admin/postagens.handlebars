<h2>Postagens</h2>
<br>
<a href="/admin/postagens/add">
    <button class="btn btn-success">Nova postagem</button>
</a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <h6>{{descricao}}</h6>
            <small><strong>Categoria: </strong>{{categoria.nome}}</small> <br>
            <small><strong>Data: </strong>{{date}}</small>
            <div class="col-lg-12" style="text-align: right;">
                <a href="/admin/postagens/edit/{{_id}}">
                    <button class="btn btn-success">Editar postagem</button>   
                </a>
                <form action="/admin/postagens/deletar" method="POST">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button  type="submit" class="btn btn-danger mt-2">Deletar postagem</button>
                </form>
            </div>                
        </div>
    </div>
{{else}}
    <h4 class="mt-4">Nenhuma postagem encontrada.</h4>
{{/each}}