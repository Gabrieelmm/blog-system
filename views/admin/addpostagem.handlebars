{{#each erros}}
    <div class="alert alert-danger">{{msg}}</div>
{{else}}

{{/each}}
<div class="card mt-2">
    <div class="card-body">
        <h2>Nova postagem</h2>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo" class="mt-4">Título:</label>
            <input type="text" name="titulo" class="form-control mt-1" required placeholder="Título da postagem">

            <label for="titulo" class="mt-4">Slug:</label>
            <input type="text" name="slug" class="form-control mt-1" required placeholder="Endereço da postagem (ex: /postagem/slug)">

            <label for="titulo" class="mt-4">Descrição:</label>
            <textarea type="text" name="descricao" class="form-control mt-1" style="height: 150px; min-height: 100px;" required placeholder="Descrição da postagem"></textarea>

            <label for="titulo" class="mt-4">Conteúdo:</label>
            <textarea name="conteudo" class="form-control mt-1" style="height: 300px; min-height: 200px" required placeholder="Digite aqui..."></textarea>

            <label for="categoria" class="mt-4">Categoria:</label>
            <select name="categoria" class="form-control mt-1" required>
                {{#each categorias}}
                <option value="" selected hidden>Selecione uma categoria</option>
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0" disabled selected hidden >Nenhuma categoria registrada.</option>
                {{/each}}
            </select>
            
            <button class="btn btn-success mt-4" type="submit">Criar postagem</button>
        </form>
    </div>
</div>